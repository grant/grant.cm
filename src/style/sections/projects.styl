section#projects
  background-color DARK_WHITE
  background linear-gradient(#f9f9f9, #f3f3f3)

  > .title
    title()
    padding-bottom 0
    &.sub
      subtitle()
  .cardLayout
    margin-bottom 20px
    position relative
    text-align center

.card
  cardSpacing = 10px
  display inline-block
  margin cardSpacing
  position relative
  width 100px
  height 100px
  overflow hidden

  text-align center
  border-radius 5px
  color WHITE
  transition transform transitionSpeed
  @media phone
    margin (cardSpacing * 0.5) cardSpacing
    width "calc(100% - %s)" % (2*cardSpacing)
  @media (min-width 600px)
    width 100px
    margin cardSpacing
  &:hover
    transform scale(1.4)
  .photo
    position absolute
    top 10px
    left 0
    right 0
    margin auto
    width 40px
  .textArea
    position absolute
    bottom 0
    width 100%
    text-align left
    padding 3px 3px 6px 3px
    .title
      font-size FONT_XSMALL
      font-weight 700
      padding-bottom 0px
      transition color transitionSpeed
      &:after
        padding-left 10px
        content 'Â»'
    .description
      font-size FONT_XXSMALL
      line-height 1.3

  // Custom CSS
  card($bgcolor)
    background-color $bgcolor
    .textArea
      background-color alpha(darken($bgcolor, 15%), 0.8)

  // default
  card(red)

