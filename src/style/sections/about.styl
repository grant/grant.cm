// Colors
lightColor = LIGHT_ORANGE
baseColor = ORANGE
darkColor = DARK_ORANGE

section#about
  background linear-gradient(90deg, darken(baseColor, 10%), lighten(baseColor, 10%))
  color WHITE

  > .title
    title()
    color WHITE

  $profilePictureWidth = 200px
  .profile
    width $profilePictureWidth
    display block
    margin 0 auto
    text-align center
    border-radius 50%
    margin-bottom 20px
    padding 10px
    border 2px rgba(lightColor, 0.5) dashed

  $profileColumnWidth = 760px
  .longBio
    $bioPadding = 20px
    text-indent 50px
    width $profileColumnWidth
    margin 0 auto
    font-size FONT_MEDIUM
    line-height 1.5
    padding-bottom $bioPadding
    padding-left 15px
    em, a
      color lightColor
    a
      transition color transitionSpeed
      &:hover
        color darkColor
    @media phone
      width 100%
      padding $bioPadding
      font-size FONT_SMALL
