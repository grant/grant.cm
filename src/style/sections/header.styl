header
  background linear-gradient(90deg, darken(RED, 10%), lighten(RED, 10%))
  height 100%
  overflow hidden
  text-align center

  boxWidth = 700px
  boxHeight = 500px
  phoneWidth = 300px
  .centerBox
    position absolute
    left 50%
    top 50%
    width boxWidth
    height boxHeight
    margin-left (boxWidth/-2)
    margin-top (boxHeight/-2)
    @media phone
      width phoneWidth * 1.5
      margin-left (phoneWidth * 1.5/-2)
    .name
      title()
      font-size FONT_XXLARGE
      margin 12px 0
      left 4px
      @media phone
        font-size FONT_XLARGE
        line-height 2
        padding-bottom 0
    .bio
      color DARK_RED
      font-size FONT_LARGE
      margin-bottom 50px
      .bullet
        padding 0 10px
      @media phone
        font-size FONT_SMALL
    ul li
      font-size FONT_MEDIUM
      line-height 2em
      letter-spacing 2px
      color DARK_RED
      transition color transitionSpeed ease
      &:hover
        color DARK_WHITE
      @media phone
        color WHITE
  .arrow
    position absolute
    bottom 10px
    left 50%
    width 100px
    margin-left -50px
    font-size 50px
    cursor pointer
    color alpha(WHITE, 0.3)
    // color rgba(WHITE, 0.3)
    animation bounce 2s infinite
    transition color transitionSpeed ease
    &:hover
      color rgba(WHITE, 0.8)
