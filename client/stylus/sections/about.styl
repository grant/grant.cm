//
// About Section
//

// Colors
lightColor = LIGHT_ORANGE
baseColor = ORANGE
darkColor = DARK_ORANGE

section#about
  background-color baseColor
  color WHITE

  // Fade in
  @media notPhone
    &.show
      > .title
        fadein()
      .profile
        fadein(300ms)
      .longBio
        fadein(600ms)

  > .title
    title()
    color WHITE
    @media notPhone
      opacity 0

  $profilePictureWidth = 200px
  .profile
    width $profilePictureWidth
    display block
    margin 0 auto
    text-align center
    border-radius 50%
    margin-bottom 20px
    padding 10px
    border 2px rgba(lightColor, 0.5) dashed
    @media notPhone
      opacity 0

  $profileColumnWidth = 760px
  .longBio
    $bioPadding = 30px
    text-indent 50px
    width $profileColumnWidth
    margin 0 auto
    font-size FONT_MEDIUM
    line-height 1.5
    padding-bottom $bioPadding
    padding-left 15px
    em, a
      color lightColor
    a
      transition color transitionSpeed
      &:hover
        color darkColor
    @media phone
      width 100%
      padding $bioPadding
      font-size FONT_SMALL
    @media notPhone
      opacity 0